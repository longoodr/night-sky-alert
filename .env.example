# Location coordinates (decimal degrees)
LATITUDE=40.7128
LONGITUDE=-74.0060

# Pushover notification credentials
PUSHOVER_USER_KEY=your_user_key
PUSHOVER_API_TOKEN=your_api_token

# Weather thresholds
CLOUD_COVER_LIMIT=15.0
PRECIP_PROB_LIMIT=5.0

# Minimum continuous viewing time required (in hours)
# Only send alert if there's at least this many consecutive hours of good weather
MIN_VIEWING_HOURS=1.0

# Check interval in minutes (1-60) for astronomical calculations
# Weather data is hourly, but astronomy is calculated at this interval
# Default: 1 minute for smooth continuous gradients in visualization
# Higher values (15-30) are faster but less smooth
CHECK_INTERVAL_MINUTES=1

# Optional: Custom viewing time window (24-hour HH:MM format, leave empty to use sunset/sunrise)
START_TIME=
END_TIME=
